<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:background="@color/backgroundColor"
        app:strokeColor="@color/primaryColor"
        app:strokeWidth="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/reviewCardName"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:background="@color/lightPink"
                android:text="Product Name"
                android:textColor="@color/primaryDarkColor"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/reviewCardArea"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Malviya Nagar, Delhi"
                android:textColor="@color/primaryColor"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/reviewCardDescription"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:textSize="15sp"
                android:maxLines="3"
                android:paddingBottom="10dp"
                android:text="@string/LoremIpsum"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColorBlue"
                android:paddingVertical="5dp">

                <ImageView
                    android:id="@+id/reviewCardCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/ic_baseline_call_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/reviewCardShare"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintEnd_toStartOf="@+id/reviewCardSave"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_baseline_share_24"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/reviewCardSave"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_baseline_bookmark_24"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>