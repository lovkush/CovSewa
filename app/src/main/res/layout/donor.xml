<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:isScrollContainer="true"
    android:background="@drawable/splash"
    tools:context=".Activities.Donor">


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:endIconMode="dropdown_menu"
        app:boxBackgroundColor="@color/backgroundColor">

        <AutoCompleteTextView
            android:id="@+id/selectProductCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:inputType="none"
            android:paddingHorizontal="10dp"
            android:hint="@string/select_category"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/backgroundColor">

        <EditText
            android:id="@+id/textZipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EnterZipCode"
            android:inputType="number"
            android:maxLength="6"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/backgroundColor">

        <EditText
            android:id="@+id/textAddLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 1"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:boxBackgroundColor="@color/backgroundColor">

        <EditText
            android:id="@+id/textAddLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 2"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:endIconMode="dropdown_menu"
        app:boxBackgroundColor="@color/backgroundColor">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 2"
            android:paddingVertical="17dp"
            android:paddingHorizontal="10dp"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:boxBackgroundColor="@color/backgroundColor">

        <EditText
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:hint="Enter Description (50 words)"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="8"
            android:scrollbars="vertical" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Images"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/imageViewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="0dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:strokeWidth="3dp"
            android:layout_weight="1"
            app:strokeColor="@color/browser_actions_bg_grey"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/donorImg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_twotone_image_24" />
        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="0dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:strokeWidth="3dp"
            android:layout_weight="1"
            app:strokeColor="@color/browser_actions_bg_grey"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/donorImg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_twotone_image_24" />
        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="0dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:strokeWidth="3dp"
            android:layout_weight="1"
            app:strokeColor="@color/browser_actions_bg_grey"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/donorImg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_twotone_image_24" />
        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="0dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:strokeWidth="3dp"
        android:layout_weight="1"
        app:strokeColor="@color/browser_actions_bg_grey"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/donorImg4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_twotone_image_24" />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitProductDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:padding="10dp"
        android:text="Continue"
        android:textSize="15sp"
        app:cornerRadius="15dp" />



</LinearLayout>