<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="5dp"
    android:background="@drawable/card_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="100dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/cardView"
        app:strokeColor="@color/primaryLightColor"
        app:strokeWidth="3dp"
        android:background="@drawable/image_border"
        android:layout_height="100dp">


        <ImageView
            android:id="@+id/myDonationCardImage"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_photo" />


    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        android:textStyle="bold"
        android:text="Donation Topic"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_Small"
        android:textColor="@color/primaryDarkColor"
        android:id="@+id/cardDonationTopic"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Donation Description Donation Description "
        android:maxLines="3"
        android:layout_marginRight="@dimen/activity_horizontal_margin_Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardDonationTopic"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/cardDonationDescription"/>

    <TextView
        android:id="@+id/cardDonationInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Donation Info"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@id/cardDonationDescription"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Time"
        app:layout_constraintBottom_toBottomOf="@+id/cardDonationInfo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>