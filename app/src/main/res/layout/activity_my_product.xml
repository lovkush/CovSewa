<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ProductList">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin_Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productRecycler"
        tools:itemCount="6"
        android:visibility="gone"
        tools:listitem="@layout/donation_card"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text ="Nothing available"
        android:gravity="center"
        android:textSize="20sp"
        android:paddingVertical="20dp"
        android:id="@+id/textProductList"/>
</LinearLayout>